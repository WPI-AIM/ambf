# compiler
CC      ?= gcc
CXX     ?= g++
COMPILER = $(CC)

# common compiler flags
CFLAGS   += -DLINUX -Dlinux -Wno-deprecated
CXXFLAGS += -DLINUX -Dlinux -Wno-deprecated -std=c++0x

# set target architecture
ifeq ($(ARCH), x86_64)
CFLAGS   += -m64
CXXFLAGS += -m64
endif
ifeq ($(ARCH), i686)
CXXFLAGS += -m32 -march=i686 -msse2
CFLAGS   += -m32 -march=i686 -msse2
endif

# shared library definition
SHARED_NAME = lib$(ROOT_NAME).so.$(MAJOR)
SHARED_OPT  = -shared -lHDU -Wl,-soname,$(SHARED_NAME)
LIB_SHARED  = $(LIB_DIR)/$(SHARED_NAME).$(MINOR).$(RELEASE)
